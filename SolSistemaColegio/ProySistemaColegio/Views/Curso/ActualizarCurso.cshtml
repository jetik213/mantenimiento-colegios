@model ProySistemaColegio.Models.Procedimientos_almacenados.sp_editar_gradoCursoModel

@{
    ViewData["Title"] = "ActualizarCurso";
}

<div class="d-flex justify-content-between">
    <h1>Editar curso</h1>
    <a asp-action="ListarCursos" class="btn btn-light" id="btn-regresar-listado">Regresar al listado</a>
</div>
<hr />
<div class="form-group row">
    <div>
        <form asp-action="ActualizarCurso">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cur_cod" class="control-label"></label>
                <input asp-for="cur_cod" class="form-control" />
                <span asp-validation-for="cur_cod" class="text-danger"></span>
            </div>
            <div class="btn-group d-flex justify-content-around">
                <div class="form-group form-check-inline ">
                     <input class="form-check-input" type="checkbox" asp-for="primero"/>
                    <label class="form-check-label" asp-for="primero">
                        1er grado
                    </label>
                </div>
                <div class="form-group form-check-inline">
                    <input class="form-check-input" type="checkbox" asp-for="segundo" />
                    <label class="form-check-label" asp-for="segundo">
                        2do grado
                    </label>
                </div>
                <div class="form-group form-check-inline">
                    <input class="form-check-input" type="checkbox" asp-for="tercero"  />
                    <label class="form-check-label" asp-for="tercero">
                        3er grado
                    </label>
                </div>
                <div class="form-group form-check-inline">
                    <input class="form-check-input" type="checkbox" asp-for="cuarto" />
                    <label class="form-check-label" asp-for="cuarto">
                        4to grado
                    </label>
                </div>
                <div class="form-group form-check-inline">
                    <input class="form-check-input" type="checkbox" asp-for="quinto" />
                    <label class="form-check-label" asp-for="quinto">
                        5to grado
                    </label>
                </div>
                <div class="form-group form-check-inline">
                    <input class="form-check-input" type="checkbox" asp-for="sexto" />
                    <label class="form-check-label" asp-for="sexto">
                        6to grado
                    </label>
                </div>
            </div >         
                <div id="div-input-curso">
                    <label asp-for="cur_desc" class="col-form-label col-form-label-sm mt-4"></label>
                    <input asp-for="cur_desc" class="form-control form-control-sm" id="input-curso" />
                    <span asp-validation-for="cur_desc" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center" id="btn-registrar-curso">
                <input type="submit" value="Grabar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
