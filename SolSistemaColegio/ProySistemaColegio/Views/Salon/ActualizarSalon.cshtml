@model ProySistemaColegio.Models.SalonModel

@{
    ViewData["Title"] = "ActualizarSalon";
}

<div class="d-flex justify-content-between">
    <h1>Editar salón de clases</h1>
    <a asp-action="ListarSalones" class="btn btn-light" id="btn-regresar-listado">Regresar al listado</a>
</div>
<hr />
<div class="form-group row">
    <div>
        <form asp-action="ActualizarSalon">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="sal_cod" class="control-label"></label>
                <input asp-for="sal_cod" class="form-control" />
                <span asp-validation-for="sal_cod" class="text-danger"></span>
            </div>
           <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="pro_cod" class="col-form-label col-form-label-sm mt-4"></label>
                    @Html.DropDownList("pro_cod", (SelectList)ViewBag.PROFESORES,
                      "Seleccione", new {@class = "form-select form-select-sm"})
                    <span asp-validation-for="pro_cod" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="graCur_cod" class="col-form-label col-form-label-sm mt-4"></label>
                    @Html.DropDownList("graCur_cod", (SelectList)ViewBag.GRADOCURSOS,
                      "Seleccione", new {@class = "form-select form-select-sm"})
                    <span asp-validation-for="graCur_cod" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-center" id="btn-registrar-curso">
                <input type="submit" value="Grabar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
