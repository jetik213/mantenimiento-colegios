@model IEnumerable<ProySistemaColegio.Models.Procedimientos_almacenados.sp_listar_productosModel>

@{
    ViewData["Title"] = "ListarProductos";
}
<div class="d-flex justify-content-between">
    <h1>Listado de productos</h1>
    <p>
        <a asp-action="InsertarProducto" class="btn btn-primary">Registrar producto</a>
    </p>
</div>
<br />
<table class="table table-hover align-middle text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pro_cod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cat_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_precio)
            </th>
            <th>Mantenimiento</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pro_cod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cat_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_precio)
            </td>
            <td>
                    @Html.ActionLink("Edi", "ActualizarProducto", new { id=item.pro_cod }, new { @class= "btn btn-outline-info"}) |
                    @Html.ActionLink("Eli", "AnularProducto", new { id=item.pro_cod }, new { @class= "btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
