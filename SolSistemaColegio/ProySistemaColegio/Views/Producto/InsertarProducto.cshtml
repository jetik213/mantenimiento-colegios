@model ProySistemaColegio.Models.ProductoModel

@{
    ViewData["Title"] = "InsertarProducto";
}
<div class="d-flex justify-content-between">
    <h1>Registrar nuevo producto</h1>
    <a asp-action="ListarProductos" class="btn btn-light" id="btn-regresar-listado">Regresar al listado</a>
</div>
<hr />
<div class="form-group row">
    <div>
        <form asp-action="InsertarProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div >
                <div class="row justify-content-center" >
                    <div class="form-group col-md-3">
                        <label asp-for="pro_desc" class="col-form-label col-form-label-sm mt-4"></label>
                        <input asp-for="pro_desc" class="form-control" />
                        <span asp-validation-for="pro_desc" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="cat_cod" class="col-form-label col-form-label-sm mt-4"></label>
                        @Html.DropDownList("cat_cod", (SelectList)ViewBag.CATEGORIAS,
                          "Seleccione", new {@class = "form-select form-select-sm"})
                        <span asp-validation-for="cat_cod" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center" >
                    <div class="form-group col-md-3">
                        <label asp-for="pro_stock" class="col-form-label col-form-label-sm mt-4"></label>
                        <input asp-for="pro_stock" class="form-control form-control-sm" />
                        <span asp-validation-for="pro_stock" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="pro_precio" class="col-form-label col-form-label-sm mt-4"></label>
                        <input asp-for="pro_precio" class="form-control form-control-sm" />
                        <span asp-validation-for="pro_precio" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-center" id="btn-registrar-curso">
                <input type="submit" value="Registrar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
